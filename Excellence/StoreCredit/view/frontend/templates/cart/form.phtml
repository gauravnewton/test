<script type="text/javascript">
    var saveUrl = "<?php echo $storeManager->getStore()->getBaseUrl() . 'storecredit/checkout/totals'; ?>";
    window.quoteentityid = <?php echo $quateId; ?>;
    var quote = window.quoteentityid;
    require(['jquery','Magento_Checkout/js/action/get-totals'], function($,getTotalsAction) {
        $('#checkBoxCart').on('click', function() {
                if($('#checkBoxCart:checkbox:checked').length==1){
                 var idvalue=1;
                 sessionStorage.setItem('AdminId', idvalue);
                 // sessionStorage.removeItem('AdminId');
                 $.ajax({
                    url: saveUrl,
                    type: "POST",
                    data: {
                        checked: true,
                        quote_id: quote
                    },
                    showLoader: true,
                    success:function(data) {
                        var deferred = jQuery.Deferred();
                        getTotalsAction([], deferred);
                    }
                });
             }
             else{
                var idvalue=0;
                sessionStorage.setItem('AdminId', idvalue);
                $.ajax({
                    url: saveUrl,
                    type: "POST",
                    data: {
                        checked: false,
                        quote_id: quote
                    },
                    showLoader: true,
                    success:function(data) {
                     var deferred = jQuery.Deferred();
                     getTotalsAction([], deferred);
                     }
                });      
            }
        });        
    });
</script>